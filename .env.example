# =========================
# News Service Configuration
# =========================

# Service Type Selection:
# 'wordpress' - Use only WordPress API
# 'supabase' - Use only Supabase API  
# 'auto' - Automatically choose best available service
REACT_APP_NEWS_SERVICE_TYPE=auto

# =========================
# WordPress API Configuration
# =========================
REACT_APP_WORDPRESS_API=https://megaphoneoz.com/wp-json/wp/v2
REACT_APP_WP_USERNAME=your-wordpress-username
REACT_APP_WP_APP_PASSWORD=your-wordpress-app-password
REACT_APP_WORDPRESS_ENABLED=true

# =========================
# Supabase API Configuration
# =========================
REACT_APP_SUPABASE_NEWS_API=http://localhost:3000
REACT_APP_SUPABASE_ENABLED=true

# For production, use your deployed backend URL:
# REACT_APP_SUPABASE_NEWS_API=https://your-supabase-backend.vercel.app

# =========================
# Fallback & Retry Settings
# =========================
REACT_APP_ENABLE_FALLBACK=true
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_TIMEOUT_MS=15000
REACT_APP_HEALTH_CHECK_INTERVAL=300000

# =========================
# Cache Settings
# =========================
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_EXPIRATION=5

# =========================
# Development Settings
# =========================
REACT_APP_LOG_API_CALLS=true
REACT_APP_MOCK_DATA=false
REACT_APP_DEV_PREFERRED_SERVICE=supabase